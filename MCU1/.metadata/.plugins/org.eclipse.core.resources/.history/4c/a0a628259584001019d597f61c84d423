 *      Author: TUF
 */

#include "stm32f767xx.h"

#ifndef INC_STM32F767XX_I2C_DRIVER_H_
#define INC_STM32F767XX_I2C_DRIVER_H_

/*
 * Configuration structure of I2Cx peripheral
 */
typedef struct
{
	uint32_t I2C_SCLSpeed;        //@I2C_SCLSpeed
	uint8_t  I2C_DeviceAddress;
	uint8_t  I2C_ACKControl;
	uint16_t I2C_FMDutyCycle;

}I2C_Config_t;

/*
 * Handle structure forI2C peripheral
 */
typedef struct
{
	I2C_RegDef_t *pI2Cx;
	I2C_Config_t I2C_Config;

}I2C_Handle_t;

/*
 * @I2C_SCLSpeed
 */
#define I2C_SCL_SPEED_SM 100000 //Standard mode 100k Hz
#define I2C_SCL_SPEED_FM4K 400000 //Fast mode 400k Hz
#define I2C_SCL_SPEED_FM2K 200000 //Fast mode 200k Hz

/*
 * @I2C_AckControl , disabled by default
 */
#define I2C_ACK_ENABLE 1
#define I2C_ACK_DISABLE 0

/*
 * @I2C_FMDutyCycle (default APB1 clock rate)
 */
#define I2C_FM_DUTY_2_SCLL 26
#define I2C_FM_DUTY_2_SCLH 12

#define I2C_FM_DUTY_16_9_SCLL 25
#define I2C_FM_DUTY_16_9_SCLH 13

/*
 * @I2C_FMHoldDelay (default APB1 clock rate)
 */
#define I2C_FM_SDADEL 2
#define I2C_FM_SCLDEL 5

/*
 * @I2C_FMPRESC
 */
#define I2C_FM_PRESC 0

/***************************************************************************************
 * API SUPPORTED BY THIS DRIVER
 * CHECK FUNCTION DETAILS FOR MORE INFORMATIONS
 * ***************************************************************************************/
/*
 *  Peripheral Clock Setup
 */
void I2C_PeriClockControl(I2C_RegDef_t *pI2Cx, uint8_t EnorDi);
/*
 * Init and De-Init
 */
void SPI_Init(SPI_Handle_t *pSPIHandle);
void SPI_DeInit(SPI_RegDef_t *pSPIx); //take base address of peripheral (reset register)

/*
 * IRQ Configuration and ISR handling
 */
void SPI_IRQInterruptConfig(uint8_t IRQNumber, uint8_t EnorDi);
void SPI_IRQPriorityConfig(uint8_t IRQNumber, uint32_t IRQPriority);

/*
 * Other peripheral control APIs
 */
void SPI_PeripheralControl(SPI_RegDef_t *pSPIx, uint8_t EnorDi);
uint8_t SPI_GetFlagStatus(SPI_RegDef_t *pSPIx, uint32_t FlagName);

/*
 * Application callback
 */
void SPI_ApplicationEventCallback(SPI_Handle_t *pSPIHandle, uint8_t AppEv); //Ev = event

#endif /* INC_STM32F767XX_I2C_DRIVER_H_ */
