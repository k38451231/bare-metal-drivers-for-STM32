#include "stm32f767xx.h"

#ifndef INC_STM32F767XX_I2C_DRIVER_H_
#define INC_STM32F767XX_I2C_DRIVER_H_

/*
 * Configuration structure of I2Cx peripheral
 */
typedef struct
{
	uint32_t I2C_SCLSpeed;        //@I2C_SCLSpeed
	uint8_t  I2C_DeviceAddress;
	uint8_t  I2C_ACKControl;
	uint16_t I2C_FMDutyCycle;

}I2C_Config_t;

/*
 * Handle structure forI2C peripheral
 */
typedef struct
{
	I2C_RegDef_t *pI2Cx;
	I2C_Config_t I2C_Config;

}I2C_Handle_t;

/*
 * @I2C_SCLSpeed
 */
#define I2C_SCL_SPEED_SM 100000 //Standard mode 100k Hz
#define I2C_SCL_SPEED_FM4K 400000 //Fast mode 400k Hz
#define I2C_SCL_SPEED_FM2K 200000 //Fast mode 200k Hz

/*
 * @I2C_AckControl , disabled by default
 */
#define I2C_ACK_ENABLE 1
#define I2C_ACK_DISABLE 0

/*
 * @I2C_FMDutyCycle
 */
#define I2C_FM_DUTY_2
#define I2C_FM_DUTY_16_9


#endif /* INC_STM32F767XX_I2C_DRIVER_H_ */
