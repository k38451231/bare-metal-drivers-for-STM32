#include "stm32f767xx.h"
#include "stm32f767xx_gpio_driver.h"

void delay(void)
{
	for(uint32_t i=0 ; i<500000 ; i++);
}

int main(void)
{
	//LED2 on PB7
	GPIO_Handle_t GpioLed;
	GpioLed.pGPIOx = GPIOB;
	GpioLed.GPIO_PinConfig.GPIO_PinNumber = GPIO_PIN_NO_7;
	GpioLed.GPIO_PinConfig.GPIO_PinMode = GPIO_MODE_OUT;
	GpioLed.GPIO_PinConfig.GPIO_PinSpeed = GPIO_SPEED_FAST;
	GpioLed.GPIO_PinConfig.GPIO_PinOPType = GPIO_OP_TYPE_PP; // push pull mode
	GpioLed.GPIO_PinConfig.GPIO_PinPuPdControl = GPIO_NO_PUPD;

	/* for open drain mode, must pull up (pull to Vdd), or else LED can only pull down
	 * < expect very small intensity (small blinking) >
	 * better way is to use external pull-up, e.g. connected PB7 to Vcc
	 */

	//GpioLed.GPIO_PinConfig.GPIO_PinOPType = GPIO_OP_TYPE_OD; // push pull
	//GpioLed.GPIO_PinConfig.GPIO_PinPuPdControl = GPIO_PIPN_PU;

	GPIO_PeriClockControl(GPIOB, ENABLE);

	GPIO_Init(&GpioLed);

	while(1){
		GPIO_ToggleOutputPin(GPIOB, GPIO_PIN_NO_7);
		delay();
	}

	return 0;
}
